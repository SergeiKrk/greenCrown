<style is:global>
	@keyframes moveGradient {
		0% {
			transform: translateX(0) translateY(0);
			background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
			opacity: 0.2;
		}
		25% {
			transform: translateX(80vw) translateY(40vh);
			background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
			opacity: 0.2;
		}
		50% {
			transform: translateX(10vw) translateY(70vh);
			background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
			opacity: 0.2;
		}
		75% {
			transform: translateX(80vw) translateY(90vh);
			background: radial-gradient(circle at 50% 50%, #2faf83, #c6e9dd);
			opacity: 0.2;
		}
		100% {
			transform: translateX(30vw) translateY(10vh);
			background: radial-gradient(circle at 70% 70%, #2faf83, #c6e9dd);
			opacity: 0.2;
		}
	}
	@keyframes moveGradientt {
		0% {
			transform: translateX(80vw) translateY(80vh);
			background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
			opacity: 0.2;
		}
		25% {
			transform: translateX(40vw) translateY(80vh);
			background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
			opacity: 0.2;
		}
		50% {
			transform: translateX(70vw) translateY(10vh);
			background: radial-gradient(circle at 50% 0%, #2faf83, #c6e9dd);
			opacity: 0.2;
		}
		75% {
			transform: translateX(60vw) translateY(60vh);
			background: radial-gradient(circle at 50% 50%, #2faf83, #c6e9dd);
			opacity: 0.2;
		}
		100% {
			transform: translateX(10vw) translateY(30vh);
			background: radial-gradient(circle at 70% 70%, #2faf83, #c6e9dd);
			opacity: 0.2;
		}
	}

	div.animate-gradient {
		background-size: 100% 100%;
		animation-timing-function: ease-in-out;
	}
</style>

<div class="absolute -z-10 -mt-[500px]">
	<div
		class="animate-gradient h-[50vw] w-[50vw] animate-[moveGradient_20s_infinite_alternate] rounded-full blur-3xl"
	>
	</div>
</div>
<div class="absolute -z-10 -mt-[500px]">
	<div
		class="animate-gradient h-[40vw] w-[40vw] animate-[moveGradientt_10s_infinite_alternate] rounded-full blur-3xl"
	>
	</div>
</div>
