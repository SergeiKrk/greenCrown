---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import Hero from '../components/blocks/hero/PageHero.astro'
import Feature from '../components/blocks/features/FeatureList.astro'
import SidebarContent from '../components/blocks/basic/StickySidebar.astro'
import FAQ from '../components/blocks/FAQ/FaqSticky.astro'
import TextImage from '../components/blocks/basic/TextImage.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import Section from '../components/ui/Section.astro'
import Row from '../components/ui/Row.astro'
import Col from '../components/ui/Col.astro'
import Card from '../components/ui/cards/FeatureCard.astro'
import FormOption from '../components/ui/forms/form-option/FormOption.jsx'

import heroImg from '../assets/cards/lechenie-derevev.webp'
import Grut from '../assets/Grut.webp'

import plodovie from '../assets/highlights/plodovye-derevya.png'
import hvoinie from '../assets/highlights/hvoinie-derevya.png'
// Data
import faqData from '../data/json-files/faqData.json'
// - FAQ Categories
const faqPricing = faqData.filter((faq) => faq.category === 'pricing')
const faqIntegrations = faqData.filter((faq) => faq.category === 'integrations')

// Content
import faqImage1 from '../assets/faq/faq-01.png'
import CategoryCard from '../components/blocks/basic/categoryCard/CategoryCard.astro'
import { Image } from 'astro:assets'
// - SEO
const SEO = {
	title: 'Лечение деревьев: Обработка от Болезней в Москве и МО',
	description:
		'Лечение деревьев в Москве и области: Укрепляем, лечим, восстанавливаем, защищаем от болезней с гарантией результата. Убедитесь в качестве: безопасные методы, опытные специалисты, долговечный результат!'
}
// - Page Header
const header = {
	title: 'Лечение <strong>деревьев</strong>',
	text: 'Лечение деревьев — комплекс мер по оздоровлению, защите и восстановлению деревьев, чтобы продлить их жизнь, предотвратить болезни и улучшить внешний вид.'
}

const catCards = {
	title: 'Наши <strong>услуги</strong>',
	description:
		'Осуществляем профессиональное лечение деревьев, включая восстановление после повреждений и заболеваний. Наши специалисты используют эффективные методы для защиты и оздоровления деревьев.'
}

const catCardsTwo = {
	title: 'Когда дереву требуется <strong>лечение</strong>',
	description:
		'Ключевые признаки болезней, повреждений и наличия вредителей, когда требуется профессиональное вмешательство.'
}

type MajorSubCategories = {
	link: string
	title: string
	text: string
	image: any
	imageWidth: number
	imageHeight: number
}

type CategoryServices = {
	link: string
	title: string
	text: string
	image: any
	imageWidth: number
	imageHeight: number
}

type CategoryServicesTwo = {
	link: string
	title: string
	text: string
	image: any
	imageWidth: number
	imageHeight: number
}

const MajorSubCategories: MajorSubCategories[] = [
	{
		link: '/lechenie-plodovyh-derevev',
		title: 'Лечение плодовых',
		text: 'Лечение, обрезка и подкормка – это основа для здоровья и высокой урожайности плодовых',
		image: plodovie,
		imageWidth: plodovie.width,
		imageHeight: plodovie.height
	},
	{
		link: '/lechenie-hvoinih-derevev',
		title: 'Лечение хвойных',
		text: 'Комплексные услуги по оздоровлению хвойных, включая диагностику, обработку от вредителей и защиту от болезней',
		image: hvoinie,
		imageWidth: hvoinie.width,
		imageHeight: hvoinie.height
	},
	{
		link: '/lechenie-hvoinih-derevev',
		title: 'Лечение лиственных',
		text: 'Лечение и профилактика заболеваний лиственных. Надежная защита от вредителей, бактерий и грибков',
		image: hvoinie,
		imageWidth: hvoinie.width,
		imageHeight: hvoinie.height
	}
]

const CategoryServices: CategoryServices[] = [
	{
		link: '/#',
		title: 'Диагностика и лечение ствола',
		text: 'Профессиональное обследование и лечение деревьев.',
		image: hvoinie,
		imageWidth: hvoinie.width,
		imageHeight: hvoinie.height
	},
	{
		link: '/#',
		title: 'Обрезка и обработка деревьев',
		text: 'Санитарная обрезка способствует укреплению и оздоровлению деревьев',
		image: hvoinie,
		imageWidth: hvoinie.width,
		imageHeight: hvoinie.height
	},
	{
		link: '/#',
		title: 'Инъекции для деревьев',
		text: 'Стволовые инъекции для борьбы с болезнями и паразитами',
		image: plodovie,
		imageWidth: plodovie.width,
		imageHeight: plodovie.height
	},
	{
		link: '/#',
		title: 'Подкормка и защита деревьев',
		text: 'Внесение подкормок повышает иммунитет ваших деревьев и кустарников',
		image: plodovie,
		imageWidth: plodovie.width,
		imageHeight: plodovie.height
	}
]

const CategoryServicesTwo: CategoryServicesTwo[] = [
	{
		link: '/#',
		title: 'Трещины и раны деревьев',
		text: 'Лечение дупел, трещин, морозобоин и ран деревьев',
		image: hvoinie,
		imageWidth: hvoinie.width,
		imageHeight: hvoinie.height
	},
	{
		link: '/#',
		title: 'Бактериальные ожоги',
		text: 'Лечение бактериальных ожогов',
		image: hvoinie,
		imageWidth: hvoinie.width,
		imageHeight: hvoinie.height
	},
	{
		link: '/#',
		title: 'Обработка от вредителей',
		text: 'Обработка деревьев от вредителей и болезней',
		image: plodovie,
		imageWidth: plodovie.width,
		imageHeight: plodovie.height
	}
]
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} heroImg={heroImg} />
	<section
		class="mt-42 mx-auto mb-6 max-w-[1200px] bg-neutral-100/80 p-6 2xl:mb-0 2xl:mt-12 2xl:bg-white"
		aria-multiselectable="false"
	>
		<div class="md:flex md:flex-row">
			<div class="text-slate-500">
				<div class="relative p-6 pb-0 pr-0">
					<figure class="relative z-10">
						<blockquote class="p-6 leading-relaxed">
							<p class="mb-2 text-sm font-light">
								<i>
									Лечить дерево правильно – задача, требующая опыта и знаний. Мы предлагаем
									профессиональные услуги по уходу, оздоровлению и защите деревьев.</i
								>
							</p>
							<p class="mt-1">
								<span class="font-bold">Закажите бесплатную консультацию</span> и мы поможем сохранить
								здоровье и красоту ваших растений.
							</p>
						</blockquote>
					</figure><svg
						aria-hidden="true"
						class="absolute left-6 top-6 z-0 h-16"
						viewBox="0 0 17 12"
						fill="none"
						xmlns="http://www.w3.org/2000/svg"
